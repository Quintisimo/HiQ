header
  fixed(bottom 0)
  display flex
  width 100%
  align-items center
  justify-content space-around
  margin-bottom 10px

  a
    display flex
    flex 1
    justify-content center
    flex-wrap wrap
    margin 0 20px
    padding 10px
    transition all 0.5s ease-in-out
    background $dark-blue
    border-radius 5px

    img
      size(100px)
      transition all 0.5s ease-in-out

  a:hover, .is-selected
    background green

    img
      transform scale(1.1)
